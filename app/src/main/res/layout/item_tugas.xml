<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="?attr/selectableItemBackground"
    android:elevation="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Status -->
        <LinearLayout
            android:id="@+id/horizontal_only"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/bluePrimary"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_nama_tugas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TUGAS"
                android:textColor="@color/onPrimary"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Nama Tugas -->

        <LinearLayout
            android:id="@+id/ll_my_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="4dp"
            android:paddingEnd="10dp"
            android:paddingBottom="4dp">

            <!-- Kelompok -->
            <TextView
                android:id="@+id/tv_kelas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/dark_grey"
                android:text="kelas: Kelas PTIKA" />

            <!-- Mata Pelajaran -->
            <TextView
                android:id="@+id/tv_mapel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/dark_grey"
                android:text="Mata Pelajaran: Matematika" />

            <!-- Topik -->
            <TextView
                android:id="@+id/tv_materi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/dark_grey"
                android:text="Materi: Trigonometri" />

        </LinearLayout>

        <!-- Sisa Waktu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/iv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_baseline_progress_black" />

            <TextView
                android:id="@+id/tv_sisa_waktu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/dark_grey"
                android:textSize="14dp"
                tools:text="Waktu" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
